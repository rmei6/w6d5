<form action="<%= cat_url %>" method = "POST">
  <input type="hidden" name = "_method" value="PATCH">
  <label>Name:
    <input type = "text" name="cats[name]" value="<%=@cat.name%>">
  </label>
  <label>Color:
    <select name = "cats[color]">
      <option disabled >––Select a Color––</option>
      <% Cat.colors.each do |color| %>
        <% if @cat.color == color %>
          <option value="<%= color %>" selected><%= color %></option>
         <% else %>
          <option value="<%= color %>"><%= color %></option>
         <% end %>
      <% end %>
    </select>
  </label>
  <label>Birth_Date:
    <input type = "date" name="cats[birth_date]"  value="<%=@cat.birth_date%>">
  </label>
  <label>Sex:
    <label>M
      <% if @cat.sex == "M" %>
        <input checked type = "radio" name="cats[sex]" value="M" >
        <% else %>
        <input type = "radio" name="cats[sex]" value="M" >
        <% end %>
    </label>
    <label>F
      <% if @cat.sex == "F" %>  
      <input checked type = "radio" name="cats[sex]" value="F">
      <% else %>
      <input type = "radio" name="cats[sex]" value="F" >
      <% end %>
    </label>
  </label>
  <label>Description:
    <textarea name="cats[description]"><%=@cat.description%></textarea>
  </label>
  <input type="submit" name="Update Cat">
</form>